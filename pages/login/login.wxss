/* pages/login/login.wxss */
.container{
  background-color: #eee;
}

.header{
  background-color: white;
  width: 100%;
  height: 180rpx;
  top: 5px;
  border: 5px solid #eee;
  position: relative;
  margin-bottom: 10px;

}
.text1{
  position: absolute;
  margin-left: 0px;
}

.loginAndRegister{
  position: relative;
  width: 100%;
  height: 100px;
  background-color: white
}

.registerImage {
  width: 20%;
  height: 50px;
  float: left;
  position: relative;
  top: 15px;
  left: 15px;
}
.loginImage{
  width: 20%;
  height: 50px;
  float: right;
  position: relative;
  top: 15px;
  right: 15px;
}

.registerText{
  float: left;
  position: absolute;
  top: 70px;
  left: 30px;
  
}
.loginText{
  float: right;
  position: absolute;
  top: 70px;
  right: 30px;
}

/* 
进行注册 */


.phoneRegister{
  position: relative;
  margin-top: 10px;
  background-color:white;
  width: 100%;
  height: 100px;
}
.phone{
  border: 1px solid #eee;
  margin-top: 10px;
  margin-bottom: 10px;
  position: relative;
  float: left;
  margin-left: 10px;
  width: 60%;
}
.registerButton{
  position: relative;
  width: 100px;
  height: 30px;
  font-size: 13px;
  top: 50px;
  border-radius: 50%;

}
.nextButton{
  position: relative;
  width: 100px;
  height: 30px;

  font-size: 13px;
  margin-top: 60px;
}


/*注册信息的样式*/

.registerInfo{
  background-color: white;
  width: 100%;
  position: relative;
  margin-top: 10px;
}
.registerInfo text{
  font-size: 13px;
  margin-left: 10px;
  margin-bottom: 10px;
  
}
.registerInfo input{
  font-size: 13px;
  margin-left: 10px;
  margin-bottom: 10px;
  border: 1px solid #eee;
  margin-top: 10px;
  width: 60%;
}
radio{
  margin-left: 10px;
  margin-top: 10px;
  margin-bottom: 10px;
}
.essential{
  display:flex;
  
}
.flag{
  size: 15px;
  color: red;
  margin-left: 10px;
  margin-top: 15px;
}


/*登录信息的样式*/

.loginInfo{
  background-color: white;
  margin-top: 10px;
  width: 100%;
}
.loginInfo input{

  border:1px solid #eee;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 80px;
  width: 60%;
}
.loginInfo text{
  margin-left: 60px;
  font-size: 13px;
}
.loginInfo .radio{
  margin-left: 25px;
  font-size: 13px;
}
.loginInfoButton{
  
  margin-left: 80px;
  font-size: 13px;
  width: 100px;
  height: 30px;
}