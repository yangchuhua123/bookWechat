/* pages/search/search.wxss */
.category{
  background-color: #eee;
}
view.search {
    display: flex;
    flex-direction: row;
    height: 98rpx;
    background: #efeff4;
    align-items: center;
}

view.searchItem {
    display: flex;
    width: 100%;
    background: #fff;
    flex-direction: row;
    border-radius: 10rpx;
    margin-right: 130rpx;
    margin-left: 20rpx;
}

view.searchItem image {
    height: 42rpx;
    width: 42rpx;
    align-self: center;
    margin-left: 10rpx;
    margin-right: 20rpx;
    margin-top: 5px;
}

view.searchItem input {
    flex: 1;
    font-size: 30rpx;
}

.searchButton{
  font-size: 30rpx;
  width: 60px;
  height: 60rpx;
  line-height: 25px;
  position: absolute;
  right: 10px;
  top: 8px;
}
.title{
  margin-top: 10px;
  width:100%;
  height: 50px;
  line-height: 50px;
  background-color: #eee;
  color: #999;
  text-align: center;

}
.content{
  width: 100%;
  height: 120px;
  margin-top: 10px;
  background-color: white;
  display: flex;
}

image{
  margin-top: 10px;
}
.other{
  color: pink;
  margin-left: 30px;

}
.name{
  margin-bottom: 5px;
}